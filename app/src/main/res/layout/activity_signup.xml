<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="248dp"
        android:contentDescription="@string/Welcomed_App_Logo"
        app:srcCompat="@drawable/welcomed_logo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:background="@drawable/input_bubble"
        android:fontFamily="@font/dyslexie"
        android:gravity="center"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:autofillHints="first name"
        android:background="@drawable/input_bubble"
        android:fontFamily="@font/dyslexie"
        android:gravity="center"
        android:hint="@string/first_name"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:autofillHints="password"
        android:background="@drawable/input_bubble"
        android:fontFamily="@font/dyslexie"
        android:gravity="center"
        android:hint="@string/create_a_password"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/first_name"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:autofillHints="password"
        android:background="@drawable/input_bubble"
        android:fontFamily="@font/dyslexie"
        android:gravity="center"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signUp"
            android:layout_width="217dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/dyslexie"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="#7B1B9D"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signUp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dyslexie"
                android:text="@string/have_an_account"
                android:textColor="#6C675E"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/dyslexie"
                android:text="@string/log_in_now"
                android:textColor="#7B1B9D"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>